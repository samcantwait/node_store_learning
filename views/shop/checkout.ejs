<%- include('../layouts/main-layout.ejs') %>
    <!-- <link rel="stylesheet" href="/css/product.css"> -->
    <link rel="stylesheet" href="/css/cart.css">
    <%- include('../layouts/partials/navigation.ejs') %>

        <main>
            <h1>
                <%= pageTitle %>
            </h1>
            <ul class="cart__item-list">
                <% products.forEach(p=> { %>
                    <li class="cart__item">
                        <h1>
                            <%= p.productId.title %>
                        </h1>
                        <h2>Quantity: <%= p.quantity %>
                        </h2>

                    </li>
                    <% }) %>
            </ul>
            <div>
                <h2>Total: <%= totalSum %>
                </h2>
            </div>
            <div class="centered">
                <button class="btn" id="order-btn">ORDER</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('pk_test_51NVc5WKGYCxd03fdr5iU73tBHawQYILBbOdOzDoFQu33ypZMxbjUKSar9yjM60s7X84WoS37FCsuRYPbRrwfDoaR00ohExd5Y3');
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', () => {
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        });
                    })
                </script>
            </div>
        </main>
        <%- include('../layouts/partials/end.ejs') %>