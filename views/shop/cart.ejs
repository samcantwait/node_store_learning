<%- include('../layouts/main-layout.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<%- include('../layouts/partials/navigation.ejs') %>

    <main>
        <h1>
            <%= pageTitle %>
        </h1>
        <% if (products.length > 0) { %>
            <ul>
                <% products.forEach(p => { %>
                    <li>
                        <p><%= p.productData.title %> (<%= p.qty %>)</p>
                        <form action="/cart-delete-item" method="POST">
                            <input type="hidden" value="<%= p.productData._id %>" name="productId">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <h2>There are currently no products in the cart.</h2>
        <% } %>
    </main>
    <%- include('../layouts/partials/end.ejs') %>